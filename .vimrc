" -----------------------------------------------------------------------------
" Color settings
" -----------------------------------------------------------------------------

syntax on
colorscheme desert
set background=dark
highlight ColorColumn ctermbg=DarkGray guibg=DarkGray

" -----------------------------------------------------------------------------
" Basic Settings
"   Research any of these by running :help <setting>
" -----------------------------------------------------------------------------

set backupdir=/tmp//,.
set clipboard=unnamedplus
set colorcolumn=80,120
set directory=/tmp//,.
set encoding=utf-8
set expandtab smarttab
set hlsearch
set ignorecase
set incsearch
set matchpairs+=<:> " Use % to jump between pairs
set mouse=a
set number
set ruler
set shiftwidth=2
set showcmd
set showmatch
set showmode
set smartcase
set softtabstop=2
set spelllang=en_us
set splitbelow
set splitright
set tabstop=2
set textwidth=0
set undodir=/tmp
set wrap